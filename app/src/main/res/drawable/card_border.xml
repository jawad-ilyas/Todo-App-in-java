<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000" /> <!-- Replace with your desired background color -->
            <corners android:radius="5dp" /> <!-- Adjust corner radius if needed -->
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent to see background -->
            <stroke
                android:width="2dp"
                android:color="#fff" /> <!-- Border color and width -->
            <corners android:radius="5dp" /> <!-- Match corner radius with the background -->
        </shape>
    </item>

</layer-list>
