<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".todayFrag">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B7FFFFFF"
        android:textSize="25sp"

        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:text="Enjoy Your Day  , My Friends" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6AFFFFFF"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="15dp"
        android:text="Rest and recharge your battery - you deserver it " />


    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B7EF2E2E"
        android:id="@+id/tvTodo"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:text="Share #Todo List" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:layout_width="50dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:id="@+id/btnPopup"
            android:src="@drawable/baseline_add_24"
            android:background="@drawable/button_background"
            android:layout_height="50dp"/>

    </FrameLayout>


</LinearLayout>